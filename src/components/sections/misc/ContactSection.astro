---
import ContactIconBlock from "@components/ui/blocks/ContactIconBlock.astro";
import TextInput from "@components/ui/forms/input/TextInput.astro";
import EmailContactInput from "@components/ui/forms/input/EmailContactInput.astro";
import PhoneInput from "@components/ui/forms/input/PhoneInput.astro";
import TextAreaInput from "@components/ui/forms/input/TextAreaInput.astro";

const title = "Contact us";
const subTitle =
  "Interested in placing an order or have questions about our offerings? Contact us";
const formTitle = "Please fill in the form below";
const formSubTitle = "We'll get back to you in 1-2 business days.";
---

<section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
  <div class="mx-auto max-w-2xl lg:max-w-5xl">
    <div class="text-center">
      <h1 class="text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight">
        {title}
      </h1>
      <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-400">
        {subTitle}
      </p>
    </div>

    <div class="mt-12 grid items-center gap-6">
      <div class="flex flex-col rounded-xl p-4 sm:p-6 lg:p-8">
        <h2 class="mb-8 text-xl font-bold text-neutral-700 dark:text-neutral-300">
          {formTitle}
        </h2>

        <form action="https://formsubmit.co/info@noscentia.com" method="POST">
          <input type="hidden" name="_captcha" value="false" />
          <input
            type="hidden"
            name="_next"
            value="https://www.noscentia.com/thank-you"
          />
          <input type="hidden" name="_template" value="table" />

          <div class="grid gap-4">
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <TextInput
                id="hs-firstname-contacts"
                name="hs-firstname-contacts"
                label="First Name"
              />
              <TextInput
                id="hs-lastname-contacts"
                name="hs-lastname-contacts"
                label="Last Name"
              />
            </div>
            <EmailContactInput
              id="hs-email-contacts"
              name="hs-email-contacts"
              label="Email"
            />
            <PhoneInput
              id="hs-phone-number"
              name="hs-phone-number"
              label="Phone"
            />
            <TextAreaInput
              id="hs-about-contacts"
              name="hs-about-contacts"
              label="Details"
            />
          </div>

          <div class="mt-4 grid">
            <button
              type="submit"
              class="inline-flex w-full items-center justify-center gap-x-2 rounded-lg bg-blue-600 px-4 py-3 text-sm font-bold text-white hover:bg-blue-700 transition"
            >
              Send Message
            </button>
          </div>

          <div class="mt-3 text-center">
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
              {formSubTitle}
            </p>
            <ContactIconBlock
              heading="Contact us by email"
              content="Prefer the written word? Drop us an email at"
              isLinkVisible={true}
              linkTitle="info@noscentia.com"
              linkURL="mailto:info@noscentia.com"
            />
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
