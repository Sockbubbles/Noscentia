---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/fr/ContactSection_fr.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
const metaDescription =
  "Vous souhaitez passer une commande ou avez des questions sur nos produits ? Contactez-nous — Noscentia est là pour vous aider à trouver la solution idéale.";
const ogTitle = "Contactez-nous | Noscentia";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://noscentia.com/fr/contact",
    url: "https://noscentia.com/fr/contact",
    name: "Contactez-nous | Noscentia",
    description:
      "Vous souhaitez passer une commande ou avez des questions sur nos produits ? Contactez-nous — Noscentia est là pour vous aider à trouver la solution idéale.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://noscentia.com",
      name: "Noscentia",
      description:
        "Noscentia propose des outils et accessoires de tissage haut de gamme, conçus pour la précision et la durabilité.",
    },
    inLanguage: "fr-CA",
  }}
>
  <ContactSection />
</MainLayout>
